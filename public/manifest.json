{
    "name": "Mathnasium Extension",
    "description": "Enhanced User Experience",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
    "service_worker": "background.js"
    },
    "host_permissions": ["https://radius.mathnasium.com/*","https://vs-view.mathnasium.com/*"],
    "permissions": ["cookies", "activeTab", "scripting", "tabs", "https://radius.mathnasium.com/*", "https://vs-view.mathnasium.com/*"],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png",
        "default_title": "Toggle Extension"
    },
    "commands": {
        "_execute_action": {
        "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
        }
        }
    },
    "content_scripts": [
        {
          "matches": ["https://radius.mathnasium.com/DWP/*"],
          "js": ["popup.js"],
          "css": ["components.css"],
          "run_at": "document_idle"
        }
      ]

}
